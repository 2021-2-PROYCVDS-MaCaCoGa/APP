<mapper namespace="edu.eci.cvds.samplejr.dao.mybatis.mappers.OfertaMapper">
    
    <insert id="addOferta">
        INSERT INTO Oferta (CATEGORIA, NOMBRE, DESCRIPCION, USUARIO)
        VALUES (#{categoria}, #{nombre}, #{descripcion}, #{usuario});
    </insert>
    <!--ARREGLAR MAPPER DE AÃ‘ADIR OFERTA DE ACUERDO AL MAPPER DE JAVA-->
    
    <select parameterType="map" id="consultarOfertas" resultMap="OfertaResult">
        SELECT 
            o.id as id,
            o.categoria as categoria,
            o.nombre as nombre,
            o.descripcion as descripcion,
            o.estado as estado,
            o.usuario as usuario,
            o.fechaCreacion as fCreacion,
            o.fechaModificacion as fModificacion
        FROM Oferta as o;
    </select> 
    
    <select parameterType="map" id="ConsultarOfertasXcategoria" resultMap="OfertaResult">
        SELECT 
            o.categoria as categoria,
            o.nombre as nombre,
            o.descripcion as descripcion,
            o.fechaCreacion as fCreacion,
            o.estado as estado
        FROM Oferta;
        WHERE o.categoria = #{categoria};
    </select> 
    
    <select parameterType="map" id="consultarOferta" resultMap="OfertaResult">
        SELECT 
            o.categoria as categoria,
            o.nombre as nombre,
            o.descripcion as descripcion,
            o.fechaCreacion as fCreacion,
            o.estado as estado
        FROM Oferta
        WHERE o.nombre = #{Oferta};
    </select>
    
    <update id = "actualizarEstado">
        UPDATE Oferta as o SET
            o.estado = #{estado}
        WHERE o.nombre = #{oferta};
    </update>
    
    <delete id="deleteOferta">
        DLEETE FROM Oferta as o
        WHERE o.nombre = #{oferta};
    </delete>
    
    <resultMap type="Oferta" id="OfertaResult">
        <id property="id" column="id"/>
        <result property="categoria" column="categoria"/>
        <result property="nombre" column="nombre"/>
        <result property="descripcion" column="descripcion"/>
        <result property="estado" column="estado"/>
        <result property="fechaCreacion" column="fCreacion"/>
        <result property="fechaModificacion" column="fModificacion"/>
        <result property="usuario" column="usuario"/>
    </resultMap>
    
    <resultMap type="Oferta" id="ResultadoOfertasResult">
        <id property="id" column="id"/>
        <result property="categoria" column="categoria"/>
        <result property="nombre" column="nombre"/>
        <result property="descripcion" column="descripcion"/>
        <result property="fechaCreacion" column="fCreacion"/>
        <result property="estado" column="estado"/>
        <result property="fechaModificacion" column="fModificacion"/>
    </resultMap>
    
    
</mapper>
