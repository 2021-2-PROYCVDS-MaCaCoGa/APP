<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.samplejr.dao.mybatis.mappers.NecesidadMapper">
    <select parameterType="map" id="consultarNecesidades" resultMap="ReporteNecesidadResult">
        SELECT 
            n.id as id,
            n.nombre as nombre,
            n.categoria as categoria,
            n.descripcion as descripcion ,
            n.urgencia as urgencia,
            n.estado as estado,
            n.fechaCreacion as fCreacion,
            u.nombre as usuario
        FROM Necesidad as n
        LEFT JOIN Usuario as u ON u.login = n.usuario
        GROUP BY n.estado,n.id,u.nombre 
    </select>
    
    <!--select parameterType="map" id="consultarNecesidades" resultMap="NecesidadResult">
        SELECT 
            n.id as id,
            n.nombre as nombre,
            n.categoria as categoria,
            n.descripcion as descripcion,
            n.fechaCreacion as fCreacion,
            n.urgencia as urgencia,
            n.estado as estado
        FROM Necesidad as n
    </select-->
    
    <select parameterType="map" id="consultarNecesidadesCategoria" resultMap="NecesidadResult">
        SELECT 
            n.id as id,
            n.nombre as nombre,
            n.categoria as categoria,
            n.descripcion as descripcion,
            n.fechaCreacion as fCreacion,
            n.urgencia as urgencia,
            n.estado as estado
        FROM Necesidad as n
        WHERE n.categoria = #{categoria};
    </select> 
    
    <select parameterType="map" id="consultarNecesidad" resultMap="NecesidadResult">
        SELECT 
            n.id as id,
            n.nombre as nombre,
            n.categoria as categoria,
            n.descripcion as descripcion ,
            n.urgencia as urgencia,
            n.estado as estado,
            n.fechaCreacion as fCreacion,
            n.usuario as usuario
        FROM Necesidad as n
        WHERE n.nombre = #{nombre};
    </select>
    
    <insert id = "addNecesidad">
        INSERT INTO Necesidad (nombre, categoria, descripcion, usuario, urgencia)
        VALUES (#{nombre},#{categoria},#{descripcion},#{usuario},#{urgencia});
    </insert>
    
    <update id = "actualizarEstado">
        UPDATE Necesidad SET
            estado = #{estado}
        WHERE nombre = #{necesidad};
    </update>
    
    <delete id="eliminarNecesidad">
        DELETE FROM Necesidad as n
        WHERE n.nombre = #{necesidad}; 
    </delete>
    
    <resultMap type="Necesidad" id="NecesidadResult">
        <id property="id" column="id"/>
        <result property = "categoria" column = "categoria" />
        <result property = "nombre" column = "nombre"/>
        <result property = "descripcion" column = "descripcion"/>
        <result property = "fechaCreacion" column = "fCreacion"/>
        <result property = "urgencia" column = "urgencia"/>
        <result property = "estado" column = "estado"/>
        <result property = "usuario" column = "usuario"/>
    </resultMap>
    
    <resultMap type="Necesidad" id="ReporteNecesidadResult">
        <id property="id" column="id"/>
        <result property = "categoria" column = "categoria" />
        <!--association property = "categoria" javaType="Categoria" select="edu.eci.cvds.samplejr.dao.mybatis.mappers.CategoriaMapper.consultarCategorias"></association-->
        <result property = "nombre" column = "nombre"/>
        <result property = "descripcion" column = "descripcion"/>
        <result property = "fechaCreacion" column = "fCreacion"/>
        <result property = "estado" column = "estado"/>
        <result property = "fechaModificacion" column = "fModificacion"/>
        <result property = "usuario" column = "usuario" />
        <!--association property = "usuario" javaType = "Usuario" select = "edu.eci.cvds.samplejr.dao.mybatis.mappers.UsuarioMapper.consultarUsuarios" ></association-->
    </resultMap>

</mapper>

